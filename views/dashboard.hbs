<h6>Dashboard</h6>
<h4>welcome {{name}}</h4>
{{#if stories}}
<table class="striped">
<thead>
<tr>
<th>Title</th>
<th>Date</th>
<th>Satus</th>
<th></th>
</tr>
</thead>
<tbody>
{{#each stories}}
<tr>
<td><a href="/stories/{{_id}}">{{title}}</a></td>
<td>{{formatDate createAt 'MMMM Do YYYY, hh:mm a'}}</td>
<td><span class="dash-status">{{status}}</span></td>
 <td><a href="/stories/edit/{{_id}}" class="btn btn-float">
 <i class="fas fa-edit"></i>
 </a></td>
 <td>
 <form action="/stories/{{_id}}" method="POST">
 <input type="hidden" name="_method" value="DELETE">
 <button type="submit" class="btn red">
     <i class="fas fa-trash"></i>
 </button>
 </form>
 </td>
</tr>

{{/each}}
</tbody>
</table>


{{else}}
<p>You no stories right now</p>
{{/if}}